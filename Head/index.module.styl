.headerArea {
    width: 100%;
    height: 80px;
    min-width: 1190px;
    background-color: #ffffff;
    /* // box-shadow:0px 2px 30px 0px rgba(0,0,0,0.05); */
    .headerAreaMain {
        width: 1190px;
        height: 80px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        position: relative;
        .logo {
            width: 100px;
            height: 40px;
            cursor: pointer;
            img {
                width: 100%;
                height: 100%;
            }
        }
        .employmentTabs {
            display: flex;
            margin-left: 20px;
            height: 40px;
            .employmentTabsList {
                padding: 0 20px;
                font-size: 16px;
                font-weight: 400;
                color: #333333;
                text-align: center;
                line-height: 40px;
                cursor: pointer;
                position: relative;
                .employmentTabsListShow {
                    position: absolute;
                    display: none;
                    width: 20px;
                    height: 4px;
                    background: rgba(0, 172, 236, 1);
                    border-radius: 3px;
                    left: 50%;
                    transform: translateX(-50%);
                    bottom: 3px;
                }
            }
            .employmentTabsList:hover .employmentTabsListShow {
                display: block;
            }
            .employmentTabsListActive {
                color: #333333;
                font-weight: 500;
                position: relative;
                &::after {
                    content: '';
                    position: absolute;
                    width: 20px;
                    height: 4px;
                    background: rgba(0, 172, 236, 1);
                    border-radius: 3px;
                    left: 50%;
                    transform: translateX(-50%);
                    bottom: 3px;
                }
            }
        }
        .login {
            display: flex;
            align-items: center;
            color: #666666;
            font-size: 14px;
            line-height: 40px;
            position: absolute;
            right: 0;
            .mySubject {
                cursor: pointer;
            }
            .loginLine {
                width: 2px;
                height: 14px;
                background: rgba(238, 238, 238, 1);
                border-radius: 1px;
                margin: 0 15px 0 15px;
            }
            .loginBtn {
                margin: 0 0 0 0px;
                display: flex;
                .log {
                    cursor: pointer;
                }
                .reg {
                    width: 96px;
                    height: 40px;
                    color: #ffffff;
                    text-align: center;
                    background: rgba(0, 175, 242, 1);
                    border-radius: 23px;
                    margin-left: 15px;
                    cursor: pointer;
                }
            }
            .navHeadFloat {
                margin: 0 0 0 40px;
            }
        }
    }
}